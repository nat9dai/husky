<launch>
    <arg name="robot_namespace" default="/hus"/>
    <group ns="$(arg robot_namespace)">
        <node pkg="laser_filters" type="scan_to_scan_filter_chain" output="screen" name="laser_filter">
            <remap from="scan" to="/$(arg robot_namespace)/front/scan" />
            <rosparam command="load" file="$(find husky_gazebo)/launch/box_filter_$(arg robot_namespace).yaml" />
        </node>
    </group>
</launch>